{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate-mock-env",
      "type": "shell",
      "command": "node scripts/run-mock.js --env-only",
      "problemMatcher": []
    },
    {
      "label": "prepare-mock-server-only",
      "type": "shell",
      "command": "node scripts/run.js --mock --skip-run-flutter",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^\\[Mock Server\\]"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting mock server",
          "endsPattern": "Mock server is running|ready"
        }
      }
    },
    {
      "label": "prepare-mock",
      "dependsOrder": "sequence",
      "dependsOn": [
        "generate-mock-env",
        "prepare-mock-server-only"
      ],
      "problemMatcher": []
    }
  ]
}
